@model AirportProject4.Project.core.DTOS.ViewModles.LoginViewModle

@{
    ViewData["Title"] = "Sign In";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4" style="width: 400px;">
        <div class="card-body p-5">
            <h3 class="text-center mb-4 fw-bold text-primary">
                ✈️ Welcome Back
            </h3>
            <p class="text-center text-muted mb-4">Please sign in to continue</p>

            <form asp-action="Signin" method="post">
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control rounded-3" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold"></label>
                    <input asp-for="Password" class="form-control rounded-3" placeholder="Enter your password" type="password" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label text-muted"></label>
                </div>

                <button type="submit" class="btn btn-primary w-100 rounded-3 py-2 fw-semibold">
                    Sign In
                </button>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-3 text-center">
                        Invalid email or password
                    </div>
                }

                <div class="text-center mt-4">
                    <span class="text-muted">Don't have an account?</span>
                    <a href="#" class="text-decoration-none text-primary fw-semibold">Sign Up</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
