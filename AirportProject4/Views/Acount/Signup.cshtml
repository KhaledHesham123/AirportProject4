@model AirportProject4.Project.core.DTOS.ViewModles.RigsterviewModler
@{
    ViewData["Title"] = "Sign Up";
}

<div class="d-flex justify-content-center align-items-center min-vh-100 bg-light">
    <div class="card shadow-lg border-0 rounded-4 p-4" style="width: 420px;">
        <div class="text-center mb-4">
            <h2 class="fw-bold text-primary">Create Your Account</h2>
            <p class="text-muted">Join our airline system today 🚀</p>
        </div>

        <form asp-action="Signup" method="post" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="UserName" class="form-label fw-semibold">Username</label>
                <input asp-for="UserName" class="form-control form-control-lg rounded-3" placeholder="Enter username" />
                <span asp-validation-for="UserName" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold">Email Address</label>
                <input asp-for="Email" class="form-control form-control-lg rounded-3" placeholder="example@email.com" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold">Password</label>
                <input asp-for="Password" class="form-control form-control-lg rounded-3" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control form-control-lg rounded-3" placeholder="Re-enter password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
            </div>

            <div class="form-check mb-3">
                <input asp-for="IsAgree" class="form-check-input" id="agreeCheck" />
                <label class="form-check-label text-muted" for="agreeCheck">
                    I agree to the <a href="#" class="text-primary text-decoration-none">Terms & Conditions</a>.
                </label>
                <span asp-validation-for="IsAgree" class="text-danger small d-block"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg rounded-3 fw-bold">
                    Sign Up
                </button>
            </div>

            <div class="text-center mt-4">
                <p class="text-muted mb-0">
                    Already have an account?
                    <a asp-action="Signin" class="text-primary text-decoration-none fw-semibold">Sign In</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
