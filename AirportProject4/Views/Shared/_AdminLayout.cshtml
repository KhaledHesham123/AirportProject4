@*
    ✅ This is the Admin Layout — shared by all admin pages
*@
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>

    <!-- ✅ Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <!-- ✅ Navbar for Admin -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand fw-bold" asp-controller="Admin" asp-action="AdminIndex">Admin Dashboard</a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">

                    <!-- ✅ Dropdown Menu for Users -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle text-white" href="#" id="usersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi bi-people"></i> Users
                        </a>
                        <ul class="dropdown-menu shadow" aria-labelledby="usersDropdown">
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="GetUsers">
                                    <i class="bi bi-list-ul"></i> View All Users
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="CreateNewUser">
                                    <i class="bi bi-person-plus"></i> Create New User
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" asp-controller="Admin" asp-action="Createrole">
                                    <i class="bi bi-shield-check"></i> Add Role
                                </a>
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Home" asp-action="Index">🏠 Home</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- ✅ Page Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-5">
        © 2025 - Admin Panel
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
