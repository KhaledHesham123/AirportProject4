@{
    ViewData["Title"] = "Airport Booking System";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <!-- Welcome Section -->
    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">✈️ Welcome to Our Airport System</h1>
        <p class="lead text-muted">Book tickets, view flights and explore our airport services</p>
    </div>

    <!-- Quick Actions Section -->
    <div class="row g-4">
        <!-- Book Tickets -->
        <div class="col-md-4">
            <div class="card shadow-sm border-primary h-100">
                <div class="card-body text-center">
                    <i class="bi bi-ticket-perforated-fill fs-1 text-primary"></i>
                    <h4 class="mt-3">Book Tickets</h4>
                    <p>Reserve your flight tickets easily and securely online.</p>
                    <a asp-controller="Booking" asp-action="Create" class="btn btn-primary">Book Now</a>
                </div>
            </div>
        </div>

        <!-- View Flights -->
        <div class="col-md-4">
            <div class="card shadow-sm border-success h-100">
                <div class="card-body text-center">
                    <i class="bi bi-airplane-fill fs-1 text-success"></i>
                    <h4 class="mt-3">View Flights</h4>
                    <p>Check all available flights, schedules, and details.</p>
                    <a asp-controller="Flight" asp-action="getAvailableFlights" class="btn btn-success">View Flights</a>
                </div>
            </div>
        </div>

        <!-- Airport Services -->
        <div class="col-md-4">
            <div class="card shadow-sm border-info h-100">
                <div class="card-body text-center">
                    <i class="bi bi-building fs-1 text-info"></i>
                    <h4 class="mt-3">Airport Services</h4>
                    <p>Learn about lounges, parking, and more at our airport.</p>
                    <a asp-controller="Home" asp-action="Services" class="btn btn-info">Explore Services</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Extra Section -->
    <div class="mt-5 text-center">
        <h2>Need Help?</h2>
        <p>Contact our support team or visit our FAQ page for more information.</p>
        <a asp-controller="Home" asp-action="Contact" class="btn btn-outline-secondary">Contact Us</a>
    </div>
</div>

<!-- Optional Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
