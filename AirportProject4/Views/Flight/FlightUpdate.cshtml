@model AirportProject4.Project.core.DTOS.ViewModles.UpdateFlightviewmodle

@{
    ViewData["Title"] = "Update Flight";
}

<h2 class="text-center mb-4">✈️ Update Flight Details</h2>

<form asp-action="FlightUpdate" asp-controller="Flight" method="post" class="w-75 mx-auto p-4 shadow rounded bg-light">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />

    <!-- Flight Info -->
    <h4>Flight Information</h4>
    <hr />

    <div class="form-group mb-3">
        <label asp-for="FlightNumber" class="form-label"></label>
        <input asp-for="FlightNumber" class="form-control" placeholder="Enter Flight Number" />
        <span asp-validation-for="FlightNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DepartureAirport" class="form-label"></label>
        <input asp-for="DepartureAirport" class="form-control" placeholder="Enter Departure Airport" />
        <span asp-validation-for="DepartureAirport" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ArrivalAirport" class="form-label"></label>
        <input asp-for="ArrivalAirport" class="form-control" placeholder="Enter Arrival Airport" />
        <span asp-validation-for="ArrivalAirport" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DepartureTime" class="form-label"></label>
        <input asp-for="DepartureTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="DepartureTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ArrivalTime" class="form-label"></label>
        <input asp-for="ArrivalTime" type="datetime-local" class="form-control" />
        <span asp-validation-for="ArrivalTime" class="text-danger"></span>
    </div>

    <!-- Aircraft Info -->
    <h4 class="mt-4">Aircraft Information</h4>
    <hr />

    <div class="form-group mb-3">
        <label asp-for="AirCraftModel" class="form-label"></label>
        <input asp-for="AirCraftModel" class="form-control" placeholder="Enter Aircraft Model" />
        <span asp-validation-for="AirCraftModel" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="AircraftCapacity" class="form-label"></label>
        <input asp-for="AircraftCapacity" type="number" class="form-control" placeholder="Enter Aircraft Capacity" />
        <span asp-validation-for="AircraftCapacity" class="text-danger"></span>
    </div>

    <!-- Airline Info -->
    <h4 class="mt-4">Airline Information</h4>
    <hr />

    <div class="form-group mb-3">
        <label asp-for="AirlineName" class="form-label"></label>
        <input asp-for="AirlineName" class="form-control" placeholder="Enter Airline Name" />
        <span asp-validation-for="AirlineName" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="AirlineCode" class="form-label"></label>
        <input asp-for="AirlineCode" class="form-control" placeholder="Enter Airline Code" />
        <span asp-validation-for="AirlineCode" class="text-danger"></span>
    </div>

    <!-- Submit -->
    <div class="text-center">
        <button type="submit" class="btn btn-primary px-4">💾 Save Changes</button>
        <a asp-action="Index" asp-controller="Flight" class="btn btn-secondary px-4 ms-2">⬅️ Back</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
