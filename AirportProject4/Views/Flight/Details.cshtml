@model AirportProject4.Project.core.DTOS.ViewModles.UpdateFlightviewmodle

@{
    ViewData["Title"] = "Flight Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h1 class="mb-4">Flight Details</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Flight ID</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3">Departure Time</dt>
                <dd class="col-sm-9">@Model.DepartureTime?.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Arrival Time</dt>
                <dd class="col-sm-9">@Model.ArrivalTime?.ToString("yyyy-MM-dd HH:mm")</dd>

                <dt class="col-sm-3">Departure Airport</dt>
                <dd class="col-sm-9">@Model.DepartureAirport</dd>

                <dt class="col-sm-3">Arrival Airport</dt>
                <dd class="col-sm-9">@Model.ArrivalAirport</dd>

                <dt class="col-sm-3">Aircraft Model</dt>
                <dd class="col-sm-9">@Model.AirCraftModel</dd>

                <dt class="col-sm-3">Aircraft Capacity</dt>
                <dd class="col-sm-9">@Model.AircraftCapacity</dd>
            </dl>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        <a asp-action="FlightUpdate" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    </div>
</div>
